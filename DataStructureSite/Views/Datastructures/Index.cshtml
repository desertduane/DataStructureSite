@model IEnumerable<DataStructureSite.Models.Datastructure>


@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}
<style>
    #solution {
        height: 300px;
    }
    #description{
        max-width: 70%;
    }
</style>

<h2>Much Code Such Wow</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>Enter a key word to filter structues</p>
<form asp-controller="Datastructures" asp-action="Index" method="get">
    <p>
        Structure: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solution)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <p id="description">@Html.DisplayFor(modelItem => item.Description)</p> 
                </td>
                <td>
                    <pre id="solution">@Html.DisplayFor(modelItem => item.Solution)</pre>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
